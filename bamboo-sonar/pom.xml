<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<artifactId>bamboo-sonar-integration</artifactId>
		<groupId>com.marvelution.bamboo.plugins</groupId>
		<version>1.6.0-SNAPSHOT</version>
	</parent>
	<artifactId>bamboo-sonar</artifactId>
	<packaging>pom</packaging>

	<name>Bamboo Sonar Integration :: Distribution Package</name>
	<description>Distribution package for the Bamboo Sonar Integration project</description>
	<url>http://apidocs.marvelution.com/bamboo-sonar-integration/${project.parent.version}/${project.artifactId}</url>
	<inceptionYear>2011</inceptionYear>
	
	<scm>
		<connection>scm:git:git@github.com:Marvelution/bamboo-sonar-integration.git/bamboo-sonar</connection>
		<developerConnection>scm:git:git@github.com:Marvelution/bamboo-sonar-integration.git/bamboo-sonar</developerConnection>
		<url>http://fisheye.marvelution.com/browse/bamboo-sonar-integration/bamboo-sonar</url>
	  <tag>HEAD</tag>
  </scm>

	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>bamboo-sonar-tasks</artifactId>
			<version>${project.version}</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>bamboo-sonar-web</artifactId>
			<version>${project.version}</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2-beta-5</version>
				<executions>
					<execution>
						<id>create-main-distribution</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<attach>true</attach>
							<descriptors>
								<descriptor>src/assembly/distribution.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
